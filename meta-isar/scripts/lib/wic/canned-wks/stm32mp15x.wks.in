part fsbl1 --part-name=fsbl1 --source rawcopy --sourceparams "file=/usr/lib/u-boot/${MACHINE}/u-boot-spl.stm32" --fsoptions "noauto" --part-type 0x8301 --fixed-size 256K
part fsbl2 --part-name=fsbl2 --source rawcopy --sourceparams "file=/usr/lib/u-boot/${MACHINE}/u-boot-spl.stm32" --fsoptions "noauto" --part-type 0x8301 --fixed-size 256K
part ssbl --part-name=ssbl --source rawcopy --sourceparams "file=/usr/lib/u-boot/${MACHINE}/u-boot.img" --fsoptions "noauto" --part-type 0x8301 --fixed-size 2048K

part / --source rootfs-u-boot --fstype ext4 --label root --align 1024 --active --use-uuid

bootloader --ptable gpt --append="rootwait rw console=ttySTM0,115200"
